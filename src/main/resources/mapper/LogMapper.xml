<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.capp.mapper.LogMapper">

    <resultMap id="BaseResultMap" type="com.example.capp.dto.Log">
        <result column="id" property="id" />

    </resultMap>

    <!--表名-->
    <sql id="BASE_TABLE">
        tl_log
    </sql>

    <!--基本列-->
    <sql id="BASE_COLUMN">
        l.id, l.action, l.data, l.authorId, l.ip, l.creationDate
    </sql>

    <!--添加日志-->
    <insert id="addLog" parameterType="com.example.capp.dto.Log">
        INSERT INTO
        <include refid="BASE_TABLE"/>
        <trim prefix="(" suffix=")" suffixOverrides=",">
            action, data, author_id, ip, creation_date,
        </trim>
        <trim prefix="VALUES(" suffix=")" suffixOverrides=",">
            #{action},
            #{data},
            #{authorId},
            #{ip},
            #{creationDate}
        </trim>
    </insert>

    <select id="getLogs" resultType="com.example.capp.dto.Log">
        SELECT
        <include refid="BASE_COLUMN"/>
        FROM
        <include refid="BASE_TABLE"/> AS l
        ORDER BY
        l.id DESC
    </select>

</mapper>